# ================================
# üöÄ Application Configuration
# ================================
# The URL of the application server
APP_URL=https://api.example.com

# The URL of the client application
CLIENT_URL=https://www.example.com

# The port the server will run on
PORT=8000

# ================================
# üîë JWT (JSON Web Token) Configuration
# ================================
# Secret key for signing and verifying Access Tokens (random, strong string)
ACCESS_TOKEN_SECRET=your_random_access_secret_1234567890abcdef

# Secret key for signing and verifying Refresh Tokens (random, different from ACCESS_TOKEN_SECRET)
REFRESH_TOKEN_SECRET=your_random_refresh_secret_0987654321fedcba

# Secret key for signing and verifying Reset Tokens for password reset
RESET_TOKEN_SECRET=your_random_reset_secret_abcdef1234567890

# Expiration time for Access Tokens
ACCESS_TOKEN_EXPIRE=15m

# Expiration time for Refresh Tokens
REFRESH_TOKEN_EXPIRE=7d

# Expiration time for Reset Tokens
RESET_TOKEN_EXPIRE=1h

# ================================
# üóÑÔ∏è Database Configuration
# ================================
# Username for the MongoDB database
MONGO_USERNAME=admin_user

# Password for the MongoDB database
MONGO_PASSWORD=secure_password_123

# Hostname of the MongoDB database
MONGO_HOSTNAME=localhost

# Port of the MongoDB database
MONGO_PORT=27017

# Name of the MongoDB database the application will use
MONGO_DB=my_app_db

# ================================
# üìß Email Configuration
# ================================
# Email address used to send emails
SMTP_EMAIL=your_email@gmail.com

# Password or App Password for the SMTP email account
SMTP_PASSWORD=your_gmail_app_password
